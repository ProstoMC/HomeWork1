<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewNuggets"
        android:layout_width="165dp"
        android:layout_height="122dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/naggets" />

    <Button
        android:id="@+id/buttonNuggets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showNuggets"
        android:text="Show more"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNuggets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewNuggets" />

    <TextView
        android:id="@+id/textViewNuggets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наггетсы с фри"
        app:layout_constraintBottom_toTopOf="@+id/buttonNuggets"
        app:layout_constraintEnd_toEndOf="@+id/buttonNuggets"
        app:layout_constraintStart_toStartOf="@+id/buttonNuggets"
        app:layout_constraintTop_toTopOf="@+id/imageViewNuggets" />

    <ImageView
        android:id="@+id/imageViewDumplings"
        android:layout_width="165dp"
        android:layout_height="107dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/imageViewNuggets"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNuggets"
        app:srcCompat="@drawable/dumplings" />

    <Button
        android:id="@+id/buttonDumplings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show more"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewDumplings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewDumplings" />

    <TextView
        android:id="@+id/textViewDumplings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пельмени"
        app:layout_constraintBottom_toTopOf="@+id/buttonDumplings"
        app:layout_constraintEnd_toEndOf="@+id/buttonDumplings"
        app:layout_constraintStart_toStartOf="@+id/buttonDumplings"
        app:layout_constraintTop_toTopOf="@+id/imageViewDumplings" />
</androidx.constraintlayout.widget.ConstraintLayout>